@page
@model myCrud3.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}
<h2>Create</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Customer.Name">Name:</label>
        <input asp-for="Customer.Name" class="form-control input-lg" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
        <label asp-for="Customer.EmailAddress">Email:</label>
        <input asp-for="Customer.EmailAddress" class="form-control input-lg" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <button type="submit" class="btn btn-primary" asp-page-handler="Cancel">Cancel</button>
</form>